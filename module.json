{
	"name": "Midicraft",
	"type": "MIDI",
	"path": "Hardware",
	
	"version": "0.1",
	"description": "Allow you to control LED Feddback on Midicraft Controllers with chataigne",
	"url":"https://github.com/niklasberlin/Midicraft-Chataigne-Module",
	"downloadURL": "https://github.com/niklasberlin/Midicraft-Chataigne-Module/archive/refs/heads/main.zip",
	
	"hasInput": true,
	"hasOutput": true, 

	"hideDefaultCommands": false,
	"hideDefaultParameters": [
		"autoFeedback",
		"tempo",
		"mtc"
	],

	"defaults": {
		"useHierarchy": true
	},
	
	"parameters": {
	},
	
	"scripts": [
		"midicraft.js"
	],
	
	"values": {
	},
	
	"commands": {
		
		"Set LED" : {
			"menu" : "LED",
			"callback" : "set_led",
			"parameters" : {
				"Channel" : {
					"type":"Integer",
					"default": 1, 
					"min":1,
					"max":16
				},
				"Note" : {
					"type":"Integer",
					"default": 0, 
					"min":0,
					"max":127
				},
				"Animation": {
					"type": "Enum",
					"options":{
						"off":0,
						"static dark" : 1,
						"static bright" : 17,
						"complementary color":33,
						"flash dark-bright" : 49,
						"controller feedback" : 65
					}
				}, 
				"Color": {
					"type": "Enum",
					"options":{
						"white":0,
						"red":1,
						"orange":2,
						"yellow":3,
						"ferngreen":4,
						"green":5,
						"seagreen":6,
						"cyan":7,
						"lavender":8,
						"blue":9,
						"purple":10,
						"magenta":11,
						"pink":12,
						"CTO":13,
						"CTB":14,
						"default":100	
					}
				} 
			}
		},
		"Set LED by Color" :{
			"menu":"LED",
			"callback":"set_LED_by_color",
			"parameters" : {
				"Channel" : {
					"type":"Integer",
					"default": 1, 
					"min":1,
					"max":16
				},
				"Note" : {
					"type":"Integer",
					"default": 0, 
					"min":0,
					"max":127
				},
				"Animation": {
					"type": "Enum",
					"options":{
						"off":0,
						"static dark" : 1,
						"static bright" : 17,
						"complementary color":33,
						"flash dark-bright" : 49,
						"controller feedback" : 65
					}
				}, 
				"Color": {
					"type": "Color"
				} 
			}
		}
	}
}
